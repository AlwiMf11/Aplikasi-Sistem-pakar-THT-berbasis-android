<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/memek"
    tools:context=".mulut"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="98dp"
      android:layout_marginTop="23dp"
      android:orientation="horizontal"
      android:background="@drawable/bg_thtoke1">





  </LinearLayout>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="10dp"/>
  <ImageView
      android:id="@+id/mulut1"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:background="@drawable/form"
      android:src="@drawable/mulut"
      android:layout_gravity="center"
      android:layout_margin="10dp"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="10dp"/>

  <TextView
      android:id="@+id/tt"
      android:layout_width="match_parent"
      android:layout_height="41dp"
      android:padding="5dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:visibility="gone"
      android:background="#A3A8A8"
      android:text="Adakah Lecet pada Sekitar Bibir? "
      android:textAlignment="center"
      android:textColor="#ffff"
      android:textSize="20dp"
      android:textStyle="bold" />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="10dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ya"
        android:layout_marginLeft="100dp"
        android:layout_width="55dp"
        android:background="#4CAF50"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:visibility="gone"
        android:text="Ya" />


    <TextView
        android:id="@+id/no"
        android:background="#FF5722"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#fff"

        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="No"/>


  </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="10dp"/>


  <TextView
      android:id="@+id/pp"
      android:layout_width="match_parent"
      android:layout_height="41dp"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:background="#A3A8A8"
      android:text="Apakah Lecetnya Seperti Lepuh Kecil? "
      android:textAlignment="center"
      android:backgroundTint="#4CAF50"
      android:textColor="#ffff"
      android:textSize="15dp"
      android:visibility="gone"
      android:textStyle="bold" />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="10dp"/>

  <TextView
      android:id="@+id/p1"
      android:layout_width="match_parent"
      android:layout_height="41dp"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:background="#FF5722"
      android:text="Apakah Bibir Dan Kulit Disekitarnya Merah Dan Pecah? "
      android:textAlignment="center"
      android:visibility="gone"
      android:textColor="#ffff"
      android:textSize="15dp"
      android:textStyle="bold" />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="10dp"/>
  <TextView
      android:id="@+id/p2"
      android:layout_width="match_parent"
      android:layout_height="151dp"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:background="#4CAF50"
      android:text=" \n Saran: \n Bawa Periksakan ke Dokter Atau Rumah sakit"
      android:textAlignment="center"
      android:textColor="#ffff"
      android:visibility="gone"
      android:textSize="15dp"
      android:textStyle="bold" />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="10dp"/>

  <TextView
      android:id="@+id/p3"
      android:layout_width="match_parent"
      android:layout_height="151dp"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:visibility="gone"
      android:background="#FF5722"
      android:text="Kemungkinan Penyebab : \nEksema Mulut \n Saran: \n Oleskan Krim Kortikosteroid"
      android:textAlignment="center"
      android:textColor="#ffff"
      android:textSize="15dp"
      android:textStyle="bold" />




</LinearLayout>


